{
  "name": "highscore-board",
  "private": true,
  "scripts": {
    "generate": "prisma generate",
    "prisma-studio": "prisma studio",
    "db-dev": "docker run -p 5432:5432 -e POSTGRES_DB=highscore -e POSTGRES_PASSWORD=local -v ./.tmp:/var/lib/postgresql/data postgres",
    "db-seed": "prisma db seed",
    "db-reset": "prisma migrate dev reset",
    "dx:next": "run-s migrate-dev db-seed && next dev",
    "dx:prisma-studio": "pnpm prisma-studio",
    "dx": "run-p dx:* --print-label",
    "dev": "pnpm dx:next",
    "prebuild": "run-s generate migrate",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --cache src",
    "lint-fix": "pnpm lint --fix",
    "migrate-dev": "prisma migrate dev",
    "migrate": "prisma migrate deploy",
    "test-unit": "vitest",
    "test-e2e": "playwright test",
    "test-start": "run-s test-unit test-e2e",
    "postinstall": "pnpm generate",
    "typecheck": "pnpm tsc --noEmit"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "prettier": {
    "printWidth": 80,
    "trailingComma": "all",
    "singleQuote": true
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.1",
    "@nextui-org/react": "^2.6.10",
    "@prisma/client": "^5.12.1",
    "@react-hookz/web": "^25.0.1",
    "@tanstack/react-query": "^5.62.8",
    "@tanstack/react-query-devtools": "^5.62.10",
    "@trpc/client": "npm:@trpc/client@next",
    "@trpc/next": "npm:@trpc/next@next",
    "@trpc/react-query": "npm:@trpc/react-query@next",
    "@trpc/server": "npm:@trpc/server@next",
    "clsx": "^2.0.0",
    "cookie": "^1.0.2",
    "cookies-next": "^5.0.2",
    "format-duration": "^3.0.2",
    "framer-motion": "^11.15.0",
    "next": "^15.2.4",
    "pusher": "^5.2.0",
    "pusher-js": "8.4.0-rc2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^5.4.0",
    "superjson": "^1.12.4",
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.26.1",
    "@types/node": "^22.9.0",
    "@types/react": "^19.0.0",
    "autoprefixer": "^10.4.7",
    "dotenv": "^16.0.1",
    "eslint": "^9.13.0",
    "eslint-config-next": "^15.0.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-tailwindcss": "^3.17.5",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.39",
    "prettier": "^3.3.3",
    "prisma": "5.22.0",
    "start-server-and-test": "^1.12.0",
    "tailwindcss": "^3.4.6",
    "tsx": "^4.0.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.12.2",
    "vite": "^5.3.4",
    "vitest": "^2.0.4"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "packageManager": "pnpm@9.15.1"
}
